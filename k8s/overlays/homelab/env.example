# AuthorWorks Homelab Secrets Configuration
# Copy to .env and fill in actual values before deploying

# PostgreSQL (running as neon-postgres-leopaska on llm_network)
POSTGRES_PASSWORD=your-postgres-password

# Redis (running as redis-nd-leopaska on llm_network)
REDIS_PASSWORD=your-redis-password

# MinIO/S3 (running as minio-leopaska on llm_network)
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=generate-a-secure-secret

# Logto Client Secret (get from Logto admin console at auth-admin.author.works)
LOGTO_CLIENT_SECRET=get-from-logto-console

# Optional: Stripe (for subscription features)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Optional: AI Services
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
