# AuthorWorks K3d Environment Configuration
# Copy this file to .env and fill in the values

# Domain
DOMAIN=leopaska.xyz

#=============================================================================
# External Services (running outside K3d cluster)
#=============================================================================

# PostgreSQL - adjust based on your setup
# Homelab: neon-postgres-leopaska
# Local:   localist-postgres-local or host.docker.internal
POSTGRES_HOST=neon-postgres-leopaska
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=authorworks

# Redis
# Homelab: redis-nd-leopaska
# Local:   localist-redis-local or host.docker.internal
REDIS_HOST=redis-nd-leopaska
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# MinIO/S3
# Homelab: minio-leopaska
# Local:   localist-minio-local or host.docker.internal
MINIO_HOST=minio-leopaska
MINIO_PORT=9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your-minio-password

#=============================================================================
# Authentication
#=============================================================================
JWT_SECRET=your-jwt-secret-change-this-in-production
LOGTO_CLIENT_ID=authorworks-app
LOGTO_CLIENT_SECRET=from-logto-console

#=============================================================================
# Payment Processing (Stripe)
#=============================================================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_ENTERPRISE=price_...

#=============================================================================
# AI Services
#=============================================================================
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
ELEVENLABS_API_KEY=...

